<view wx:if="{{loading}}" class="card">加载中...</view>
<view wx:else>
  <block wx:for="{{list}}" wx:key="id">
    <view class="card">
      <view>风格：{{item.style}}</view>
      <view>点赞：{{item.likes || 0}}</view>
      <view wx:if="{{item.coverUrl}}" style="margin-top:12rpx">
        <image src="{{item.coverUrl}}" style="width:100%;height:260rpx;object-fit:cover;border-radius:12rpx;" />
      </view>
      <view style="margin-top:12rpx">
        <button class="btn" size="mini" data-id="{{item.id}}" bindtap="onLike">点赞</button>
        <button class="btn" size="mini" data-id="{{item.id}}" bindtap="goDetail" style="margin-left:12rpx">详情</button>
      </view>
    </view>
  </block>
</view>

